<div class="row">
  <% @documents.each do |row| %>
    <div class="col-sm-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= row.name %> - <%= number_to_currency(row.contract_value) %></h5>
          <p class="card-text"> <%= truncate(row.description,length: 100) %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  <% end %>

  <%== raw pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

</div>